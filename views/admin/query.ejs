<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/style.css" />
  </head>

  <body>
    <%- include ('../../partiels/admin/bannerheader.ejs')%>
    <section id="mid12">
      <div class="container">
        <div class="row">
          <%- include ('../../partiels/admin/left.ejs')%>
          <div class="col-md-8 mt-2">
            <label for="" class="form-label" style="font-weight: bold"
              >Select Seaction</label
            >

            <form action="/admin/seaction" method="post">
              <select name="search" id="" class="form-control mb-3">
                <option value="read">Read</option>
                <option value="unread">Unread</option>
              </select>
              <button type="submit" class="btn btn-success form-control mb-4">
                Search
              </button>
            </form>
            <table class="table table-success table-striped">
              <tr>
                <th>E-mail</th>
                <th>Address</th>
                <th>action</th>
                <th>Delete</th>
              </tr>
              <% queryV.forEach((result)=>{ %>

              <tr>
                <td><%= result.email %></td>
                <td><%= result.address %></td>
                <td>
                  <a href="/admin/update/<%= result.id %>"
                    ><button class="btn btn-danger">
                      <%= result.read %>
                    </button></a
                  >
                </td>
                <td>
                  <a href="/admin/delete/<%= result.id %>">
                    <button class="btn btn-danger">delete</button>
                  </a>
                </td>
              </tr>
              <% })%>
            </table>
          </div>
        </div>
      </div>
    </section>

    <%- include ('../../partiels/admin/footer.ejs')%>
  </body>
</html>
