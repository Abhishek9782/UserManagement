<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/style.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css"
    />
  </head>

  <body>
    <%- include ('../../partiels/admin/bannerheader.ejs')%>
    <section id="mid12">
      <div class="container">
        <div class="row">
          <%- include ('../../partiels/admin/left.ejs')%>
          <div class="col-md-8">
            <h2>Here is your User Management</h2>

            <table class="table table-hover" style="width: 100%">
              <tr>
                <th>Username</th>
                <th>Status</th>
                <th>Roles</th>
              </tr>
              <% regRecord.forEach((result)=>{%>

              <tr>
                <td><%= result.name%></td>
                <td>
                  <a href="/admin/userupdate/<%= result.id%>">
                    <button style="width: 70%" class="btn btn-primary">
                      <%= result.status%>
                    </button></a
                  >
                </td>
                <td>
                  <a href="/admin/role/<%= result.id%>">
                    <button style="width: 70%" class="btn btn-primary">
                      <%= result.role%>
                    </button></a
                  >
                </td>
              </tr>
              <% })%>
            </table>
          </div>
        </div>
      </div>
    </section>

    <%- include ('../../partiels/admin/footer.ejs')%>
  </body>
</html>
